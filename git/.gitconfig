[user]
	name = Antoine Rey
	email = antoine.rey@backmarket.com

[core]
	editor = code --wait -n
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = ~/.config/git/.gitignore

[pull]
	rebase = true

[push]
	# Do not ask for upstream when pushing for the first time.
	autoSetupRemote = true

[fetch]
	prune = true

[diff]
	noprefix = true

[color]
	ui = true

[init]
	defaultBranch = main

[commit]
	template = ~/.config/git/.git-commit.tpl

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[column]
	ui = auto

[branch]
	sort = -committerdate

[maintenance]
	repo = /Users/antoine.rey/Code/front-apps

[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[interactive]
	diffFilter = diff-so-fancy --patch

[diff-so-fancy]
	markEmptyLines = false
